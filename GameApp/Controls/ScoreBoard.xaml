<UserControl x:Class="GameApp.ScoreBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameApp"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">

    <Border BorderBrush="Black" BorderThickness="0" Canvas.Left="512" Canvas.Top="105" CornerRadius="10" Background="#FFBBADA0">
        <Grid HorizontalAlignment="Center" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label x:Name="lb_title" Content="Title" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" FontFamily="/GameApp;component/Resources/#Clear Sans" FontWeight="Bold" FontSize="16" Foreground="White"/>
            <Label x:Name="lb_score" Content="Score" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Grid.Row="1" Foreground="White"/>
        </Grid>
    </Border>
</UserControl>
