<Page x:Class="GameApp.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:GameApp"
      mc:Ignorable="d"
      Title="Menu" MinWidth="300" MinHeight="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition MinHeight="250"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,20" TextWrapping="Wrap" Text="Main Menu" Height="65" Foreground="#FFBBADA0" FontWeight="Bold" FontSize="48" HorizontalAlignment="Center"/>
        
        <controls:ImageSelect x:Name="img_select" Grid.Row="1" MaxWidth="600" MaxHeight="650" MinHeight="0" MinWidth="0" Margin="50,0"/>

        <Button Content="Start Game" Margin="0,30" VerticalAlignment="Center" Width="170" Height="60" Click="bt_StartGame" HorizontalAlignment="Center" BorderBrush="Gray" Background="#FFBBADA0" FontSize="25" FontWeight="Bold" Grid.Row="2" Foreground="#FFFAF8EF"/>
    </Grid>
</Page>
