<Page x:Class="GameApp.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameApp"
      mc:Ignorable="d"
      Title="Menu" MinWidth="300" MinHeight="300">

    <Grid Background="White">
        <TextBlock Margin="0,35,0,0" TextWrapping="Wrap" Text="Menu" VerticalAlignment="Top" HorizontalAlignment="Center" Height="65" Foreground="Black" FontSize="48"/>
        <Button Content="Go to Game" Margin="0,200,0,0" VerticalAlignment="Top" Width="75" Click="bt_StartGame" HorizontalAlignment="Center"/>
        <ComboBox x:Name="cb_gameSize" HorizontalAlignment="Center" Margin="0,141,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" Height="30">
            <ComboBoxItem Content="3x3" Tag="3"/>
            <ComboBoxItem Content="4x4" Tag="4"/>
            <ComboBoxItem Content="5x5" Tag="5"/>
        </ComboBox>

    </Grid>
</Page>
