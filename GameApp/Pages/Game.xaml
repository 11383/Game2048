<Page x:Class="GameApp.PageGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameApp"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="400"
      Title="Game" Focusable="True">

    <Grid Margin="10,100,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="cv_GameBoard" ClipToBounds="True" SizeChanged="page_SizeChanged" Margin="0,0,0,-0.4" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
