        <SolidColorBrush x:Key="N64BackgroundTileColorBrush" Color="#F65E3B" />
        <SolidColorBrush x:Key="N128BackgroundTileColorBrush" Color="#EDCF72" />
        <SolidColorBrush x:Key="N256BackgroundTileColorBrush" Color="#EDCC61" />
